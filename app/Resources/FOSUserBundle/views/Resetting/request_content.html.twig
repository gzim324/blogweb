{% trans_default_domain 'FOSUserBundle' %}

<div class="col-md-4 col-sm-6 col-xs-6">
    <div class="jumbotron">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-group">
            <div>
                <center><label for="username">{{ 'resetting.request.username'|trans }}</label></center>
                <input class="form-control" type="text" id="username" name="username" required="required" />
            </div><br>
            <div>
                <input class="form-control btn-success" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
            </div>
        </form>
    </div>
</div>


