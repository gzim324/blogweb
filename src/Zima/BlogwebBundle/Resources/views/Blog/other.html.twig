{% extends '@ZimaBlogweb/base.html.twig' %}

{% block body %}

    <div class="col-xs-12 col-sm-7 col-md-9">
        {% for content  in rows%}
                <div class="well">
                    <center><p style="font-size: 25px;">{{ content.title }}</p></center>
                    <p>wrote: <i><a href="{{ path('blog_user', {'id': content.owner}) }}">{{ content.owner }}</a></i> {{ content.createdAt|date('Y-m-d H:i') }} </p> <hr>
                    <p><b>{{ content.contents|slice(0, 570) ~ '...' }}</b></p>
                    <a href="{{ path('blog_content', {"id": content.id}) }}">Moreâ€¦</a>
                </div>
        {% else %}
                <div class="well">
                    <center> <h3>You have not got friends yet</h3> </center>
                </div>
        {% endfor %}

        <div class="navigation text-center">
            {{ knp_pagination_render(rows) }}
        </div>
    </div>

{% endblock %}