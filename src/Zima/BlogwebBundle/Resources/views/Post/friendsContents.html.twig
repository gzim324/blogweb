{% extends '@ZimaBlogweb/base.html.twig' %}

{% block body %}

    <div class="col-xs-12 col-sm-12 col-md-12">

        {% for content in selectFriendsPost %}
            <div class="well">
                <center><p style="font-size: 25px;">{{ content.title }}</p></center>
                <p>wrote: <i><a href="{{ path('user_board', {'username': content.owner}) }}">{{ content.owner }}</a></i> {{ content.createdAt|date('Y-m-d H:i') }} </p> <hr>
                <p><b>{{ content.shortdescription }}</b></p>
                <a href="{{ path('post_content', {"id": content.id}) }}">Moreâ€¦</a>
            </div>
        {% else %}
            <div class="well">
                <h2>You don't have any friends</h2>
            </div>
        {% endfor %}
        <div class="navigation text-center">
            {{ knp_pagination_render(selectFriendsPost) }}
        </div>
    </div>

{% endblock %}